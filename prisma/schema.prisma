generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pool {
  id        String   @id
  title     String
  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")

  options PoolOption[]

  @@map("pools")
}

model PoolOption {
  id     String @id
  poolId String
  title  String

  pool Pool @relation(fields: [poolId], references: [id])

  @@map("pool_options")
}
