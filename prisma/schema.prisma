generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poll {
  id        String   @id
  title     String
  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")

  options PollOption[]

  @@map("polls")
}

model PollOption {
  id     String @id
  pollId String
  title  String

  poll Poll @relation(fields: [pollId], references: [id])

  @@map("poll_options")
}
